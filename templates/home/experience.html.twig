<div id="experience" class="bg-indigo-100">
    <div class="max-w-7xl mx-auto grid grid-cols-2 gap-4 py-16">

        <div id="career">
            <h3 class="text-4xl font-bold pb-8">{{ 'experience'|trans }}</h3>
            {% for experience in career_experience %}
                <div>
                    <h4 class="font-bold text-xl">{{ experience.company }}</h4>
                    <p class="font-light text-sm text-gray-500">{{ experience.startDate|date('Y-m') }} - {{ experience.endDate == null ? 'today'|trans : experience.endDate|date('Y-m')}}</p>
                    {% for position in experience.positions %}
                        <div class="ml-4 mt-4 pl-4 border-l-2 border-indigo-600">
                            <strong>{{ position.title }}</strong>
                            <p class="font-light text-sm text-gray-500">{{ position.startDate|date('Y-m') }} - {{ position.endDate == null ? 'today'|trans : position.endDate|date('Y-m')}}</p>
                        </div>
                    {% endfor %}
                </div>
            {% else %}
                <p>{{ 'no_experience'|trans }}</p>
            {% endfor %}
        </div>

        <div id="education">
            <h3 class="text-4xl font-bold pb-8">{{ 'education'|trans }}</h3>
            {% for education in education_experience %}
                <div>
                    <h4 class="font-bold text-xl">{{ education.school }}</h4>
                    <p class="font-light text-sm text-gray-500">
                        {{ education.startDate|date('Y-m') }} -
                        {{ education.endDate == null ? 'today'|trans : education.endDate|date('Y-m')}}
                    </p>
                </div>
            {% else %}
                <p>{{ 'no_education'|trans }}</p>
            {% endfor %}
        </div>

    </div>
</div>
