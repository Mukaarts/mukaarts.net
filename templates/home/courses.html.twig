<div id="courses" class="max-w-7xl mx-auto">
    <section class="text-gray-600 body-font overflow-hidden">
        <div class="container px-5 py-24 mx-auto">
            <div class="text-center mb-20">
                <h3 class="sm:text-3xl text-2xl font-medium text-center title-font text-gray-900 mb-4">courses</h3>
                <p class="text-base leading-relaxed xl:w-2/4 lg:w-3/4 mx-auto">Blue bottle crucifix vinyl post-ironic four
                    dollar toast vegan taxidermy. Gastropub indxgo juice poutine, ramps microdosing banh mi pug.</p>
            </div>
            <div class="flex flex-wrap -m-12">
                {% for course in courses %}
                    <div class="p-12 md:w-1/3 flex flex-col items-start">
                        <p class="inline-block py-1 px-2 rounded bg-indigo-50 text-indigo-500 text-xs font-medium tracking-widest">
                            self.education</p>
                        <h2 class="sm:text-3xl text-2xl title-font font-medium text-gray-900 mt-4 mb-4">
                            {{ course.title }}
                        </h2>
                        <p class="leading-relaxed mb-8">Live-edge letterpress cliche, salvia fanny pack humbr pork
                            chic.</p>
                        <div class="flex items-center flex-wrap pb-4 mb-4 border-b-2 border-gray-100 mt-auto w-full">
                            <a href="{{ course.link }}" target="_blank" class="text-indigo-500 inline-flex items-center">Course
                                <svg class="w-4 h-4 ml-2" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"
                                     fill="none" stroke-linecap="round" stroke-linejoin="round">
                                    <path d="M5 12h14"></path>
                                    <path d="M12 5l7 7-7 7"></path>
                                </svg>
                            </a>
                            <div class="text-gray-400 mr-3 inline-flex items-center ml-auto leading-none text-sm pr-3 py-1 border-r-2 border-gray-200">
                                <svg class="w-4 h-4 mr-1" stroke="currentColor" stroke-width="2" fill="none"
                                     stroke-linecap="round"
                                     stroke-linejoin="round" viewBox="0 0 24 24">
                                    <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path>
                                    <circle cx="12" cy="12" r="3"></circle>
                                </svg>{{ course.skills.toArray()|join(', ') }}
                            </div>
                            <div class="text-gray-400 inline-flex items-center leading-none text-sm">
                                <svg class="w-4 h-4 mr-1" stroke="currentColor" stroke-width="2" fill="none"
                                     stroke-linecap="round"
                                     stroke-linejoin="round" viewBox="0 0 24 24">
                                    <path d="M21 11.5a8.38 8.38 0 01-.9 3.8 8.5 8.5 0 01-7.6 4.7 8.38 8.38 0 01-3.8-.9L3 21l1.9-5.7a8.38 8.38 0 01-.9-3.8 8.5 8.5 0 014.7-7.6 8.38 8.38 0 013.8-.9h.5a8.48 8.48 0 018 8v.5z"></path>
                                </svg>
                                180min
                            </div>
                        </div>
                        <a class="inline-flex items-center">
                            <img alt="blog" src="https://dummyimage.com/104x104"
                                 class="w-12 h-12 rounded-full flex-shrink-0 object-cover object-center">
                            <div class="flex-grow flex flex-col pl-4">
                                <p class="title-font font-medium text-gray-900">{{ course.mentor }}</p>
                                <p class="text-gray-400 text-xs tracking-widest mt-0.5">UI DEVELOPER</p>
                            </div>
                        </a>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>
</div>
